<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cpsscifair.ssfcompanion.NavDrawerActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:drawableTop="@drawable/logo_ssf_128"
            android:drawablePadding="16dp"
            android:text="@string/ssf_date"
            android:id="@+id/text_view_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/sponsor_message"
            android:id="@+id/text_view_sponsors" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_below="@id/text_view_sponsors"
            android:layout_marginBottom="32dp"
            android:weightSum="1"
            android:id="@+id/sponsors_row_1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/visit_chicago_public_schools_student_science_fair_inc_website"
                android:src="@drawable/logo_ssf_inc_128"
                android:onClick="viewSsfIncSite" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:contentDescription="@string/visit_chicago_public_schools_website"
                android:src="@drawable/logo_cps_128"
                android:onClick="viewCpsSite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="32dp"
            android:weightSum="1"
            android:layout_below="@id/sponsors_row_1"
            android:id="@+id/sponsors_row_2">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/visit_museum_of_science_and_industry_website"
                android:src="@drawable/logo_msi_128"
                android:onClick="viewMsiSite" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:contentDescription="@string/visit_takeda_website"
                android:src="@drawable/logo_takeda_128"
                android:onClick="viewTakedaSite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="32dp"
            android:weightSum="1"
            android:layout_below="@id/sponsors_row_2"
            android:id="@+id/sponsors_row_3">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/visit_bp_website"
                android:src="@drawable/ic_logo_bp"
                android:onClick="viewBpSite" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:contentDescription="@string/visit_comed_website"
                android:src="@drawable/logo_comed_128"
                android:onClick="viewComedSite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:weightSum="1"
            android:layout_below="@id/sponsors_row_3"
            android:id="@+id/sponsors_row_4">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/visit_motorola_solutions_foundation_website"
                android:src="@drawable/logo_motorola_solutions_foundation_128"
                android:onClick="viewMotorolaSolutionsFoundationSite" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:contentDescription="@string/visit_peoples_gas_website"
                android:src="@drawable/logo_peoples_gas_128"
                android:onClick="viewPeoplesGasSite" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
